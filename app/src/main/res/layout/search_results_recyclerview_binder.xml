<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/art_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_launcher"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:layout_toRightOf="@+id/art_image"
            android:layout_centerHorizontal="true"
            android:layout_toLeftOf="@+id/priceLayout"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_centerInParent="true">
            <sandeep.itunesminiproject.customviews.CustomBoldTextview
                android:id="@+id/trackName"
                style="@style/searchResultsTextViewStyle"
                android:text="Hip-Hope"
                />
            <sandeep.itunesminiproject.customviews.CustomTextView
                android:id="@+id/shortDescription"
                style="@style/searchResultsTextViewStyle"
                android:layout_marginTop="10dp"
                android:text="Short description"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/priceLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true">
            <sandeep.itunesminiproject.customviews.CustomBoldTextview
                android:id="@+id/price"
                style="@style/searchResultsTextViewStyle"
                android:text="price"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>